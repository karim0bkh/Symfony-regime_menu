{% extends 'base.html.twig' %}

{% block title %}Régime{% endblock %}

{% block body %}
<div class="container mt-4">
		{% if not regimes.items is same as([]) %}
			<h1>Régimes de la communuaté</h1>

			<div class="d-flex justify-content-center flex-wrap ">
				{% for regime in regimes %}
					<div class="card border-primary m-3" style="max-width: 20rem;">
						<div class="card-header">Régime n°{{ regime.id }}</div>
						<div class="card-body">
							<h4 class="card-title">
								<a href="{{ path('regime.show', {id: regime.id}) }}">{{ regime.nomRegime }}</a>
							</h4>
                            <p class="card-text">Duréé : {{ regime.duree}}</p>

							<p class="card-text">{{ regime.type}}</p>
						</div>
					</div>
				{% endfor %}
			</div>


		{% else %}
			<h4>Il n'y a pas de rcettes</h4>
		{% endif %}
	</div>

{% endblock %}
